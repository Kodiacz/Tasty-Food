@model DetailRecipeViewModel

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.ShoppingListId)
@Html.HiddenFor(m => m.Creator)
@Html.HiddenFor(m => m.Title)
@Html.HiddenFor(m => m.ImageUrl)
@Html.HiddenFor(m => m.Description)
@Html.HiddenFor(m => m.PreparationTime)
@Html.HiddenFor(m => m.CookTime)
@Html.HiddenFor(m => m.AdditionalTime)
@Html.HiddenFor(m => m.ServingsQuantity)
@for (int i = 0; i < Model.Ingredients.Count(); i++)
{
    @Html.HiddenFor(m => m.Ingredients[i].Description)
    ;
    @Html.HiddenFor(m => m.Ingredients[i].IsChecked)
    ;
    @Html.HiddenFor(m => m.Ingredients[i].Value)
    ;
}
@for (int i = 0; i < @Model.Directions.Count(); i++)
{
    @Html.HiddenFor(m => m.Directions[i].Step)
    ;
}