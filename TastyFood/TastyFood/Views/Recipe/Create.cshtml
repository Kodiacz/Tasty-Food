@model CreateRecipeViewModel

@{
    ViewBag.Title = "Add Your Favorite Recipe";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-1 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Recipe" asp-action="Create" class="needs-validation" method="post">
            <div class="form-group">
                <label asp-for="@Model.Title" class="form-label">Title:</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="form-label mt-4">Description:</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImageUrl" class="form-label">Image URL:</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row-2">
                    <div class="row">
                        <div class="col">
                            <label asp-for="@Model.Details.PreparationTime" class="form-label">Preparation Time:</label>
                            <input asp-for="@Model.Details.PreparationTime" class="form-control" aria-required="true" />
                            <span asp-validation-for="Details.PreparationTime" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="@Model.Details.CookTime" class="form-label">Cook Time:</label>
                            <input asp-for="@Model.Details.CookTime" class="form-control" aria-required="true" />
                            <span asp-validation-for="Details.CookTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="@Model.Details.AdditionalTime" class="form-label">Additional Time:</label>
                            <input asp-for="@Model.Details.AdditionalTime" class="form-control" aria-required="true" />
                            <span asp-validation-for="Details.AdditionalTime" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="@Model.Details.ServingsQuantity" class="form-label">Servings:</label>
                            <input asp-for="@Model.Details.ServingsQuantity" class="form-control" aria-required="true" />
                            <span asp-validation-for="Details.ServingsQuantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="my-3 container card" id="IngridientsDiv">
                <a class="btn btn-info my-3" onclick="AddMoreFields()">Add more fields for ingedients &nbsp; <i class="bi bi-plus-circle"></i></a>
                <hr />
            </div>
            <button class="btn btn-primary">Add Recipe</button>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        var index = 0

        function AddMoreFields() {
            $("#IngridientsDiv")
                .append(`<p>Product: ${index + 1}<p>
                        <div class='row'>
                           <input type='text' placeholder='Product name e.g. potato' name='Ingredients["${index}"].Product.Name' />
                        </div>
                        <div class='row'>
                           <input type='text' placeholder='Product type e.g. vegetable' name='Ingredients["${index}"].Product.Category.Type' />
                        </div>
                        <div class='row'>
                           <input type='text' placeholder='Product quantity e.g. 1.3' name='Ingredients["${index}"].Quantity' />
                        </div>
                        <hr />`)
            index++
            console.log("AddMoreField()")
        };
    </script>

    <partial name="_ValidationScriptsPartial" />
}